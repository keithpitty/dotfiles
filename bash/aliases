alias msa=/usr/local/mysql/bin/mysqladmin
alias msp='mysqladmin -u root shutdown'
function msd {
  mysqldump --add-locks -e -n -t $1 -u root > db/$1.sql
}
function msl {
  mysql $1 -u root < db/$1.sql
}

